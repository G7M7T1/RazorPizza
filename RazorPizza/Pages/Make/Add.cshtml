                        <img id="IRedOnions" class="absolute top-0 left-0 hidden" src="https://res.cloudinary.com/dacf2byit/image/upload/v1667578964/O_abyceq.png" alt="Base Pizza">
                        <img id="IPineapple" class="absolute top-0 left-0 hidden" src="https://res.cloudinary.com/dacf2byit/image/upload/v1667578964/PI_dw8jsn.png" alt="Base Pizza">
                        <img id="ISpinach" class="absolute top-0 left-0 hidden" src="https://res.cloudinary.com/dacf2byit/image/upload/v1667578965/S_nwxjgb.png" alt="Base Pizza">

                        <img id="IBacon" class="absolute top-0 left-0 hidden" src="https://res.cloudinary.com/dacf2byit/image/upload/v1667578983/BS_rnroe3.webp" alt="Base Pizza">
                        <img id="IButterChicken" class="absolute top-0 left-0 hidden" src="https://res.cloudinary.com/dacf2byit/image/upload/v1667578983/B9_v12wn8.webp" alt="Base Pizza">
                        <img id="IGrilledChicken" class="absolute top-0 left-0 hidden" src="https://res.cloudinary.com/dacf2byit/image/upload/v1667578983/CH_pdlsmy.webp" alt="Base Pizza">
                        <img id="IGroundBeef" class="absolute top-0 left-0 hidden" src="https://res.cloudinary.com/dacf2byit/image/upload/v1667578983/GB_szaoch.webp" alt="Base Pizza">
