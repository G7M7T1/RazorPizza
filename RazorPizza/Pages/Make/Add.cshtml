@page
@using PizzaClub.Web.Models.ViewModels
@model PizzaClub.Web.Pages.Make.Add

<div class="min-h-screen Main-BG flex flex-col items-center">
    <div class="container">
        <form method="post" class="AddPizzaForm rounded-3xl mt-16 mb-32">
            <div class="grid grid-cols-2 gap-6 mx-6 py-6 px-6">

                <div class="Img-Area flex justify-center items-center">
                    <div class="relative">
