@page
@model PizzaClub.Web.Pages.LoginModel

<section class="p-6 Pizza-BG min-h-screen">
	<div class="container grid gap-6 mx-auto text-center lg:grid-cols-3 xl:grid-cols-5 pt-32 pb-32">
		<div class="w-full px-6 py-16 rounded-md sm:px-12 md:px-16 xl:col-span-2 flex flex-col justify-center">
			<h1 class="text-5xl font-extrabold text-white pb-16">Login</h1>
			<form method="post" class="self-stretch space-y-3 ng-untouched ng-pristine ng-valid">
				<div>
					<label class="text-sm sr-only">Username</label>
					<input asp-for="LoginViewModel.Username" placeholder="Enter Username" type="text" class="w-full rounded-md focus:ring focus:ring-violet-400">
				</div>
				<div>
					<label class="text-sm sr-only">Password</label>
					<input asp-for="LoginViewModel.Password" placeholder="Enter Password" type="password" class="w-full rounded-md focus:ring focus:ring-violet-400">
				</div>
				<button type="submit" class="w-full py-2 font-semibold rounded bg-red-600 text-white">Login</button>
			</form>
		</div>
		<img src="https://res.cloudinary.com/dacf2byit/image/upload/v1667528321/6j3B_nw57xc.gif" alt="" class="object-cover w-full rounded-lg xl:col-span-3">
	</div>
</section>