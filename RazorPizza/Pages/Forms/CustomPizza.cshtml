@page
@model RazorPizza.Pages.Forms.CustomPizza

<div class="Other-BG-2 flex flex-col items-center">
    <div class="container pt-20 pb-6 w-full">
        <h1 class="text-red-600 text-5xl font-extrabold text-center Main-Title pb-3 Text-Shadow-White">
            Create Your Pizza
        </h1>

        <h4 class="text-white text-6xl font-extrabold text-center Main-Title Text-Shadow-Red">
            Make Your Full Custom Pizza From Us
        </h4>
    </div>
    
    <div class="container">
        <div class="mx-auto max-w-2xl">

            <div class="flex justify-center items-center mt-8 mb-6">
                <img class="relative" src="https://storage.pizzapizza.ca/phx2/ppl_images/topping_overlay/2x/base.png" alt="Pizza Base">
            </div>


            <form method="post" class="mt-6 mb-6 space-y-4 rounded-lg p-8 shadow-2xl bg-black bg-opacity-50">
                <p class="text-lg font-medium text-gray-100 text-center">Create Pizza</p>

                <div>
                    <label class="text-sm font-medium">Pizza Name</label>

                    <div class="relative mt-1">
                        <input asp-for="Pizza.PizzaName" type="text" class="w-full rounded-lg border-gray-200 p-4 pr-12 text-sm shadow-sm" placeholder="Enter Pizza Name"/>
                    </div>
                </div>

                <div>
                    <label class="text-sm font-medium">Image Title</label>

                    <div class="relative mt-1 pb-6">
                        <input asp-for="Pizza.ImageTitle" type="text" class="w-full rounded-lg border-gray-200 p-4 pr-12 text-sm shadow-sm" placeholder="Enter Image Title"/>
                    </div>
                </div>


                <div class="flex items-center pl-4 rounded border border-gray-700">
                    <input asp-for="Pizza.ExtraCheese" id="bordered-checkbox-1" type="checkbox" class="w-4 h-4 text-blue-600 rounded focus:ring-blue-600 ring-offset-gray-800 focus:ring-2 bg-gray-700 border-gray-600">
                    <label for="bordered-checkbox-1" class="py-4 ml-2 w-full text-sm font-medium text-gray-300">Extra Cheese</label>
                </div>

                <div class="flex items-center pl-4 rounded border border-gray-700">
                    <input asp-for="Pizza.ExtraSauce" id="bordered-checkbox-2" type="checkbox" class="w-4 h-4 text-blue-600 rounded focus:ring-blue-600 ring-offset-gray-800 focus:ring-2 bg-gray-700 border-gray-600">
                    <label for="bordered-checkbox-2" class="py-4 ml-2 w-full text-sm font-medium text-gray-300">Extra Sauce</label>
                </div>

                <div class="flex items-center pl-4 rounded border border-gray-700">
                    <input asp-for="Pizza.Peperoni" id="bordered-checkbox-3" type="checkbox" class="w-4 h-4 text-blue-600 rounded focus:ring-blue-600 ring-offset-gray-800 focus:ring-2 bg-gray-700 border-gray-600">
                    <label for="bordered-checkbox-3" class="py-4 ml-2 w-full text-sm font-medium text-gray-300">Peperoni</label>
                </div>

                <div class="flex items-center pl-4 rounded border border-gray-700">
                    <input asp-for="Pizza.Mushroom" id="bordered-checkbox-4" type="checkbox" class="w-4 h-4 text-blue-600 rounded focus:ring-blue-600 ring-offset-gray-800 focus:ring-2 bg-gray-700 border-gray-600">
                    <label for="bordered-checkbox-4" class="py-4 ml-2 w-full text-sm font-medium text-gray-300">Mushroom</label>
                </div>

                <div class="flex items-center pl-4 rounded border border-gray-700">
                    <input asp-for="Pizza.Pineapple" id="bordered-checkbox-5" type="checkbox" class="w-4 h-4 text-blue-600 rounded focus:ring-blue-600 ring-offset-gray-800 focus:ring-2 bg-gray-700 border-gray-600">
                    <label for="bordered-checkbox-5" class="py-4 ml-2 w-full text-sm font-medium text-gray-300">Pineapple</label>
                </div>

                <div class="flex items-center pl-4 rounded border border-gray-700">
                    <input asp-for="Pizza.Ham" id="bordered-checkbox-6" type="checkbox" class="w-4 h-4 text-blue-600 rounded focus:ring-blue-600 ring-offset-gray-800 focus:ring-2 bg-gray-700 border-gray-600">
                    <label for="bordered-checkbox-6" class="py-4 ml-2 w-full text-sm font-medium text-gray-300">Ham</label>
                </div>

                <div class="flex items-center pl-4 rounded border border-gray-700">
                    <input asp-for="Pizza.Beef" id="bordered-checkbox-7" type="checkbox" class="w-4 h-4 text-blue-600 rounded focus:ring-blue-600 ring-offset-gray-800 focus:ring-2 bg-gray-700 border-gray-600">
                    <label for="bordered-checkbox-7" class="py-4 ml-2 w-full text-sm font-medium text-gray-300">Beef</label>
                </div>


                <button
                    type="submit"
                    class="block w-full rounded-lg bg-red-600 px-5 py-3 text-sm font-medium text-white">
                    Checkout
                </button>
            </form>
        </div>
    </div>
</div>